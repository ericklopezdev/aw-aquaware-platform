{
    "name": "aw-bootcamp/sample-php-app",
    "description": "Sample PHP application for Day 7 quality and security testing",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse src --level=7",
        "test": "php -r \"echo 'App is running!\\n';\""
    }
}
